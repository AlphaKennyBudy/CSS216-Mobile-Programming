<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/create_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/create_label"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/create_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/repetitions_input_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/repetitions_input"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/repetitions_input"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                />

            <NumberPicker
                android:id="@+id/repetitions_input"
                android:layout_width="50dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toRightOf="@id/repetitions_input_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/one_repetition_input_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_repetition_input"
                app:layout_constraintTop_toBottomOf="@id/repetitions_input"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/one_repetition_input"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                />

            <NumberPicker
                android:id="@+id/one_repetition_input"
                android:layout_width="50dp"
                android:layout_height="100dp"
                app:layout_constraintLeft_toRightOf="@id/one_repetition_input_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/repetitions_input" />

            <com.google.android.material.button.MaterialButton
                    app:layout_constraintTop_toBottomOf="@id/one_repetition_input"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="start"
                    android:text="@string/start"
                    />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>